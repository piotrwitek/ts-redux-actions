{
  "verbose": true,
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "testMatch": ["<rootDir>/src/?(*.)+(spec|test).ts?(x)"],
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "globals": {
    "window": {},
    "ts-jest": {
      "tsConfigFile": "./tsconfig.json"
    }
  },
  "setupFiles": []
}
